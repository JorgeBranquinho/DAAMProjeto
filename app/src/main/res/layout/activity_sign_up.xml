<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="almapenada.daam.SignUpActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#fff5ba">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/signup_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="51dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sign Up"
            android:id="@+id/signup"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="right"
        android:fillViewport="false">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:id="@+id/signup_form">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:id="@+id/nome"
                android:textSize="20dp"
                android:layout_weight="0"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/putnome"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:elegantTextHeight="false"
                android:singleLine="true"
                android:nestedScrollingEnabled="true"
                android:layout_toRightOf="@+id/nome"
                android:layout_marginLeft="40dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:id="@+id/email"
                android:layout_below="@+id/nome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/putemail"
                android:layout_alignBottom="@+id/email"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/email"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="false"
                android:layout_centerHorizontal="true"
                android:nestedScrollingEnabled="true"
                android:singleLine="true"
                android:layout_alignLeft="@+id/putnome" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:id="@+id/password"
                android:textSize="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/email"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pass"
                android:layout_alignBottom="@+id/password"
                android:password="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/password"
                android:nestedScrollingEnabled="true"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/password"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@+id/putnome" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TelemÃ³vel:"
                android:id="@+id/telemovel"
                android:textSize="20dp"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/password" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/puttlm"
                android:inputType="phone"
                android:layout_toRightOf="@+id/telemovel"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/telemovel"
                android:layout_marginTop="5dp"
                android:phoneNumber="true"
                android:nestedScrollingEnabled="true"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@+id/putnome"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escolher Imagem"
                android:id="@+id/chooseImage"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/telemovel"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/chooseImage" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submeter"
                android:id="@+id/submit"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="false"
                android:layout_marginTop="15dp"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageView3" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
